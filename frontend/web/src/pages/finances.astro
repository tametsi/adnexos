---
import ListExpenses from '@/components/finances/ListExpenses.svelte';
import ListPayments from '@/components/finances/ListPayments.svelte';
import PageNav from '@/layouts/PageNav.astro';
import { CoinsIcon } from 'lucide-svelte';

export const title = 'Finances';
export const navIndex = 2;
export const icon = CoinsIcon;
---

<PageNav activeUrl="/finances" title="Finances | Adnexos">
	<Fragment slot="heading">Finances</Fragment>
	<a slot="button" href="/expenses/create" class="btn btn-soft btn-sm">Create</a>

	<ListPayments client:load />

	<ListExpenses client:load />
</PageNav>
